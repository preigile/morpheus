<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/page-style.css" type="text/css">
</head>
<body>
<form action="/jedi" method="POST" id="addBlockForm">
    <input class="termInput" type="text" name=description value="" placeholder="Add term">
    <input class="submitTermAction" type="submit" name="" value="+"><br style="clear: both;">
</form>
<div class="allTerms">

    <div id="leftTermsColumn">
        <% for(var i = 0; i < terms.length; i++) { %>
        <% if (!terms[i].hasValue) { %>
        <div class="left termsLeft">
            <a href="#"><%= terms[i].term %></a>
        </div>
        <div class="value left">
            <%= terms[i].value %>
        </div>
        <% }} %>
    </div>

    <div id="rightTermsColumn">
        <% for(i = 0; i < terms.length; i++) { %>
        <% if (terms[i].hasValue) { %>
        <div class="right termsRight">
            <a href="#"><%= terms[i].term %></a>
        </div>
        <div class="value right">
            <%= terms[i].value %>
        </div>
        <% }} %>
    </div>

</div>
<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="/js/app.js"></script>
</body>
</html>